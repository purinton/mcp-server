{
    "name": "@purinton/mcp-server",
    "type": "module",
    "version": "1.0.8",
    "description": "A Node.js server for the Model Context Protocol (MCP) with dynamic tool loading, HTTP API, and authentication.",
    "main": "index.cjs",
    "module": "index.mjs",
    "types": "index.d.ts",
    "files": [
        "index.mjs",
        "index.cjs",
        "index.d.ts",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "import": "./index.mjs",
            "require": "./index.cjs",
            "types": "./index.d.ts"
        }
    },
    "scripts": {
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/mcp-server.git"
    },
    "keywords": [
        "mcp-server",
        "model context protocol",
        "nodejs",
        "ai tools",
        "http api",
        "express",
        "dynamic tools",
        "automation"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/mcp-server/issues"
    },
    "homepage": "https://github.com/purinton/mcp-server#readme",
    "devDependencies": {
        "jest": "^29.7.0",
        "supertest": "^7.1.1"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.12.3",
        "@purinton/log": "^1.0.6",
        "@purinton/path": "^1.0.9",
        "express": "^5.1.0"
    }
}